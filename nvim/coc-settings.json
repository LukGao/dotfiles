{
    "languageserver": {
        "ccls": {
            "command": "ccls",
            "filetypes": [
                "c",
                "cpp"
            ],
            "disableDiagnostics": true,
            "rootPatterns": [
                "compile_commands.json"
            ],
            "initializationOptions": {
                "cache": {
                    "directory": "/tmp/.ccls-cache"
                },
                "snippetSupport": false
            }
        }
    },
    "explorer.width": 30,
    "explorer.git.enable": false,
    "explorer.quitOnOpen": true,
    "explorer.buffer.showHiddenBuffers": true,
    "explorer.file.reveal.auto": false,
    "explorer.file.reveal.whenOpen": true,
    "explorer.file.showHiddenFiles": false,
    "explorer.buffer.tabOnly": true,
    "explorer.icon.enableNerdfont": true,
    "explorer.file.root.template": "[icon] [root]",
    "explorer.floating.border.enable": true,
    "explorer.git.showIgnored": false,
    "explorer.icon.source": "nvim-web-devicons",
    "explorer.sources": [
        {
            "name": "file",
            "expand": true
        }
    ],
    "explorer.presets": {
        "floating": {
            "position": "floating",
            "open-action-strategy": "sourceWindow",
            "floating-width": 90
        },
        "tab": {
            "position": "tab",
            "quit-on-open": true
        },
        "floatingTop": {
            "position": "floating",
            "floating-position": "center-top",
            "floating-width": 50,
            "open-action-strategy": "sourceWindow"
        }
    },
    "codeLens.enable": false,
    "codeLens.subseparator": "|",
    "codeLens.position": "eol",
    "explorer.previewAction.onHover": false,
    "explorer.file.child.template": "[selection | clip | 1] [indent][icon | 1] [diagnosticError & 1][filename omitCenter 1][modified][readonly] [linkIcon & 1][link growRight 1 omitCenter 5][size]",
    "explorer.keyMappings.global": {
        "v": "open:vsplit",
        "n": "addFile",
        "N": "addDirectory"
    },
    "snippets.extends": {
        "cpp": [
            "c"
        ]
    },
    "snippets.ultisnips.directories": [
        "~/.config/nvim/snippets"
    ],
    "suggest.acceptSuggestionOnCommitCharacter": false,
    "coc.preferences.formatOnSaveFiletypes": [
        "markdown",
        "json"
    ],
    "semanticTokens.filetypes": [
        "*"
    ],
    "notification.disabledProgressSources": [
        "*"
    ],
    "suggest.noselect": true,
    "clangd.enabled": true,
    "clangd.inlayHints.enable": false,
    "clangd.inlayHints.sep": " ",
    "coc.preferences.currentFunctionSymbolAutoUpdate": true,
    "coc.preferences.messageLevel": "error",
    "coc.preferences.extensionUpdateCheck": "daily",
    "clangd.arguments": [
        "--background-index=true",
        "--clang-tidy",
        "--all-scopes-completion",
        "--completion-style=detailed",
        "--pch-storage=disk"
    ]
}
