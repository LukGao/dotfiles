{
    "languageserver": {
        "ccls": {
            "command": "ccls",
            "filetypes": [
                "c",
                "cpp"
            ],
            "disableDiagnostics": true,
            "rootPatterns": [
                "compile_commands.json"
            ],
            "initializationOptions": {
                "cache": {
                    "directory": "/tmp/.ccls-cache"
                },
                "snippetSupport": false
            }
        }
    },
    "explorer.width": 30,
    "explorer.git.enable": false,
    "explorer.quitOnOpen": true,
    "explorer.buffer.showHiddenBuffers": true,
    "explorer.file.reveal.auto": false,
    "explorer.file.reveal.whenOpen": true,
    "explorer.file.showHiddenFiles": false,
    "explorer.buffer.tabOnly": true,
    "explorer.icon.enableNerdfont": true,
    "explorer.file.root.template": "[icon] [root]",
    "explorer.floating.border.enable": true,
    "explorer.git.showIgnored": false,
    "explorer.icon.source": "nvim-web-devicons",
    "explorer.sources": [
        {
            "name": "file",
            "expand": true
        }
    ],
    "explorer.presets": {
        "floating": {
            "position": "floating",
            "open-action-strategy": "sourceWindow",
            "floating-width": 90
        },
        "tab": {
            "position": "tab",
            "quit-on-open": true
        },
        "floatingTop": {
            "position": "floating",
            "floating-position": "center-top",
            "floating-width": 50,
            "open-action-strategy": "sourceWindow"
        }
    },
    "explorer.previewAction.onHover": false,
    "explorer.file.child.template": "[selection | clip | 1] [indent][icon | 1] [diagnosticError & 1][filename omitCenter 1][modified][readonly] [linkIcon & 1][link growRight 1 omitCenter 5][size]",
    "explorer.keyMappings.global": {
        "v": "open:vsplit",
        "n": "addFile",
        "N": "addDirectory"
    },
    "coc.preferences.formatOnSaveFiletypes": [
        "markdown",
        "json"
    ],
    "semanticTokens.filetypes": [
        "c",
        "cpp",
        "go",
        "sh"
    ],
    "notification.disabledProgressSources": [
        "*"
    ],
    "suggest.languageSourcePriority": 99,
    "suggest.triggerCompletionWait": 50,
    "suggest.noselect": true,
    "suggest.invalidInsertCharacters": [ " ", "(", "<", "{", "[", "\r", "\n" ],
    "coc.preferences.currentFunctionSymbolAutoUpdate": true,
    "coc.preferences.messageLevel": "error",
    "coc.preferences.extensionUpdateCheck": "daily",
    "coc.preferences.useQuickfixForLocations": false,
    "coc.preferences.listOfWorkspaceEdit": "location",
    "clangd.enabled": true,
    "clangd.disableProgressNotifications": true,
    "clangd.inlayHints.enable": true,
    "inlayHint.enable": true,
    "inlayHint.enableParameter": true,
    "inlayHint.refreshOnInsertMode": true,
    "clangd.arguments": [
        "--background-index=true",
        "--clang-tidy",
        "--all-scopes-completion",
        "--completion-style=detailed",
        "--pch-storage=disk"
    ],
    "diagnostic.errorSign": "",
    "diagnostic.warningSign": "",
    "diagnostic.infoSign": "",
    "diagnostic.hintSign": "",
    "diagnostic.floatConfig": {
        "border": true,
        "borderhighlight": "FloatBorder",
        "highlight": "Normal",
        "maxWidth": 120,
        "focusable": false
    },
    "diagnostic.signPriority": 20,
    "diagnostic.enableHighlightLineNumber": false,
    "diagnostic.locationlistUpdate": false,
    "suggest.completionItemKindLabels": {
        "default": "",
        "text": "",
        "method": "",
        "function": "ƒ",
        "constructor": "",
        "field": "料",
        "variable": "",
        "class": "",
        "interface": "",
        "module": "",
        "property": "",
        "unit": "",
        "value": "",
        "enum": "",
        "keyword": "",
        "snippet": "",
        "color": "",
        "file": "",
        "reference": "渚",
        "folder": "",
        "enumMember": "",
        "constant": "",
        "struct": "פּ",
        "event": "鬒",
        "operator": "Ψ",
        "typeParameter": ""
    },
    "hover.floatConfig": {
        "border": true,
        "borderhighlight": "FloatBorder",
        "highlight": "Normal",
        "maxWidth": 120,
        "focusable": false
    },
    "signature.floatConfig": {
        "border": true,
        "borderhighlight": "FloatBorder",
        "highlight": "Normal",
        "maxWidth": 120,
        "focusable": false
    },
    "dialog.floatHighlight": "Normal",
    "dialog.floatBorderHighlight": "Normal",
    "snippets.shortcut": "SP",
    "snippets.extends": {
        "cpp": [
            "c"
        ]
    },
    "snippets.ultisnips.directories": [
        "~/.config/nvim/snippets"
    ],
    "outline.keepWindow": true,
    "outline.sortBy": "position",
    "outline.splitCommand": "botright 40vs",
    "outline.showLineNumber": true,
    "lightbulb.text": {
        "default": "",
        "quickfix": ""
    }
}
